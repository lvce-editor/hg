{
  "id": "builtin.hg",
  "name": "Hg",
  "description": "Hg SCM Integration",
  "browser": "src/hgMain.js",
  "icon": "./icon.png",
  "activation": [
    "onCommand:git.init",
    "onCommand:git.pull",
    "onCommand:git.pullRebase",
    "onCommand:git.push",
    "onCommand:git.addAll",
    "onCommand:git.sync",
    "onCommand:git.fetch",
    "onCommand:git.pr",
    "onStartupFinished",
    "onSourceControl"
  ],
  "commands": [
    {
      "id": "git.init",
      "label": "Git: Init"
    },
    {
      "id": "git.pull",
      "label": "Git: Pull"
    },
    {
      "id": "git.pullRebase",
      "label": "Git: Pull (Rebase)"
    },
    {
      "id": "git.push",
      "label": "Git: Push"
    },
    {
      "id": "git.addAll",
      "label": "Git: Add all"
    },
    {
      "id": "git.sync",
      "label": "Git: Sync"
    },
    {
      "id": "git.fetch",
      "label": "Git: Fetch"
    },
    {
      "id": "git.pr",
      "label": "Git: Create Pull Request",
      "aliases": ["pr"]
    },
    {
      "id": "git.checkoutRef",
      "label": "Git Checkout"
    }
  ],
  "quickPick": [
    {
      "id": "git.checkoutRef"
    }
  ],
  "configuration": {
    "git.path": {
      "type": "string"
    },
    "git.autoFetch": {
      "type": "boolean"
    },
    "git.autoFetchPeriod": {
      "type": "number",
      "default": 100
    }
  },
  "statusBarItems": [
    {
      "id": "git.checkout"
    },
    {
      "id": "git.sync"
    }
  ]
}
